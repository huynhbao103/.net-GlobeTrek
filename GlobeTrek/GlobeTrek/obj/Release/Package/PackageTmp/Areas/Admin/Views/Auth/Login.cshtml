@model GlobeTrek.Models.User
@{
    ViewBag.Title = "Admin Login";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(to right, #2c3e50, #4ca1af);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        width: 800px;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

        .login-container h3 {
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 20px;
        }

    .input-group-text {
        background-color: #f1f1f1;
    }

    .btn-login {
        background-color: #2c3e50;
        color: white;
        font-weight: bold;
        padding: 10px;
        border-radius: 6px;
        transition: 0.3s;
    }

        .btn-login:hover {
            background-color: #4ca1af;
        }

    .forgot-password {
        display: block;
        margin-top: 10px;
        color: #4ca1af;
        text-decoration: none;
        font-size: 14px;
    }

        .forgot-password:hover {
            text-decoration: underline;
        }
</style>

<!-- Form đăng nhập -->
<div class="login-container">
    <h3>Đăng nhập Admin</h3>
    <img src="@Url.Content("~/Content/images/logo.jpg")" alt="Logo" class="img-fluid" />


    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                @Html.TextBoxFor(m => m.email, new { @class = "form-control", placeholder = "Nhập email" })
            </div>
            @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger small" })
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
            </div>
            @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger small" })
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger small" })

        <button type="submit" class="btn btn-login w-100">Đăng nhập</button>

        <a href="#" class="forgot-password">Quên mật khẩu?</a>
    }
</div>

<!-- Bootstrap Icons -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
